<div class="comments">
  <h4>Your thoughts</h4>
  <%= form_for [@story, Comment.new] , remote: true, html: {class: "new_comment", id: "new_comment"} do |f| %>
    <div class="form-field">
      <%= f.text_area :body %>
    </div>

    <div class="form-field">
      <%= f.submit "submit", class: 'button button--sm button--pill'%>
    </div>
  <% end %>
</div>


      
