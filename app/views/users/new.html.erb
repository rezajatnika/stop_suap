<div class="row">
  <div class="columns medium-4 medium-offset-4">
    <div class="callout secondary login">
      <h3>Join Stop Suap today!</h3>
      <%= form_for @user, url: signup_path do |f| %>
        <div class="form-field">
          <%= f.text_field :email, class: 'input--large', placeholder: 'Email', autofocus: true %>
        </div>

        <div class="form-field">
          <%= f.password_field :password, class: 'input--large', placeholder: 'Password' %>
        </div>

        <div class="form-field">
          <%= f.password_field :password_confirmation, class: 'input--large', placeholder: 'Password confirmation' %>
        </div>

        <%= f.submit 'Sign Up', class: 'input--large' %>
      <% end %>
      <small>
        By signing up, you agree to the Terms of Service and Privacy Policy,
        including Cookie Use.
      </small>
    </div>
  </div>
</div>
